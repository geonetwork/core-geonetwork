<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" version="1.0">

  <xs:element name="related" type="relatedResponse"/>

  <xs:complexType name="relatedResponse">
    <xs:all>
      <xs:element name="children" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="parent" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="siblings" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded"
                        type="relatedSiblingMetadataItem"></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="associated" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="services" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="datasets" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="fcats" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="hasfeaturecats" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="sources" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="hassources" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="related" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedMetadataItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="onlines" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedLinkItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="thumbnails" minOccurs="0" maxOccurs="1">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" minOccurs="0" maxOccurs="unbounded" type="relatedThumbnailItem"
            ></xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:all>
  </xs:complexType>


  <xs:complexType name="localizedString">
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="lang" type="xs:string"/>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="relatedItem" abstract="true">
    <xs:sequence>
      <xs:element name="id" type="xs:string" minOccurs="0"/>
      <xs:element name="url">
        <xs:complexType>
          <xs:sequence>
            <!--<xs:any processContents="skip" maxOccurs="unbounded" minOccurs="0" />-->
            <xs:element name="value" type="localizedString" minOccurs="0" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="title">
        <xs:complexType>
          <xs:sequence>
            <!--<xs:any processContents="skip" maxOccurs="unbounded" minOccurs="0" />-->
            <xs:element name="value" type="localizedString" minOccurs="0" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="relatedLinkItem">
    <xs:complexContent>
      <xs:extension base="relatedItem">
        <xs:sequence>
          <xs:element name="protocol" type="xs:string" minOccurs="0"/>
          <xs:element name="description">
            <xs:complexType>
              <xs:sequence>
                <xs:element name="value" type="localizedString" minOccurs="0"
                            maxOccurs="unbounded"/>
              </xs:sequence>
            </xs:complexType>
          </xs:element>
          <xs:element name="function" type="xs:string" minOccurs="0"/>
          <xs:element name="applicationProfile" type="xs:string" minOccurs="0"/>
          <xs:element name="type" type="xs:string" minOccurs="0"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="relatedThumbnailItem">
    <xs:complexContent>
      <xs:extension base="relatedItem">
        <xs:sequence/>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="relatedSiblingMetadataItem">
    <xs:complexContent>
      <xs:extension base="relatedMetadataItem">
        <xs:sequence>
          <xs:element name="associationType" maxOccurs="1" type="xs:string"/>
          <xs:element name="initiativeType" maxOccurs="1" type="xs:string"/>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

  <xs:complexType name="relatedMetadataItem">
    <xs:complexContent>
      <xs:extension base="relatedItem">
        <xs:sequence>
          <xs:element name="description">
            <xs:complexType>
              <xs:sequence>
                <xs:element name="value" type="localizedString" minOccurs="0"
                            maxOccurs="unbounded"/>
              </xs:sequence>
            </xs:complexType>
          </xs:element>
        </xs:sequence>
      </xs:extension>
    </xs:complexContent>
  </xs:complexType>

