<geonet>
  <services package="org.fao.geonet">
    <service name="md.formatter.remove">
      <documentation><![CDATA[
        Remove a formatter.
        ]]></documentation>
      <class name=".api.records.formatters.Remove">
        <param name="user_xsl_dir" value="user_xsl"/>
      </class>
      <error id="illegal-params" sheet="../xslt/error/error-xml.xsl"/>
    </service>

    <service name="md.formatter.download">
      <documentation><![CDATA[
        Download ZIP package containaing the formmatter.
        ]]></documentation>
      <class name=".api.records.formatters.Download">
        <param name="user_xsl_dir" value="user_xsl"/>
      </class>
      <output file="true"/>
      <error id="illegal-params" sheet="../xslt/error/error-xml.xsl"/>
    </service>


    <service name="md.formatter.files">
      <documentation><![CDATA[
        Return all files contained in a formatter package.
        ]]></documentation>
      <class name=".api.records.formatters.ListBundleFiles">
        <param name="user_xsl_dir" value="user_xsl"/>
      </class>
      <error id="illegal-params" sheet="../xslt/error/error-xml.xsl"/>
    </service>

    <service name="md.formatter.edit">
      <documentation><![CDATA[
        Return a file contained in a formatter package.
        ]]></documentation>
      <class name=".api.records.formatters.EditFile">
        <param name="user_xsl_dir" value="user_xsl"/>
      </class>
      <error id="illegal-params" sheet="../xslt/error/error-xml.xsl"/>
    </service>

    <service name="md.formatter.update">
      <documentation><![CDATA[
        Update a file in a formatter package.

        Parameters:

        * id: The formatter identifier
        * fname: The file path in the formatter
        * data: The file content
        ]]></documentation>
      <class name=".api.records.formatters.UpdateFile">
        <param name="user_xsl_dir" value="user_xsl"/>
      </class>
      <error id="illegal-params" sheet="../xslt/error/error-xml.xsl"/>
    </service>

  </services>
</geonet>
