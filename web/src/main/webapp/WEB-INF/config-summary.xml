<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	Configuration of the taxonomy index used for faceting.
	
	When an item is modified or added, the index MUST be rebuild.
-->
<summary>
	<def>
		<hits>
			<item name="keyword" plural="keywords" indexKey="keyword" order="freq" type="string"
				max="100"/>
			<item name="inspireTheme" plural="inspireThemes" indexKey="inspiretheme" order="name" type="string" max="35"/>
			<item name="denominator" plural="denominators" indexKey="denominator" order="name"
				type="number" max="10"/>
			<item name="spatialRepresentation" plural="spatialRepresentations"
				indexKey="spatialRepresentation" type="string" order="freq" max="10"/>
			<item name="organizationName" plural="organizationNames" indexKey="orgName" order="freq"
				type="string" max="50"/>
			<item name="metadataAuthor" plural="metadataAuthors" indexKey="metadataPOC" order="freq"
				type="string" max="50"/>
			<item name="serviceType" plural="serviceTypes" indexKey="serviceType" order="freq"
				type="string" max="10"/>
			<item name="type" plural="types" indexKey="type" order="freq" type="string" max="10"/>
		</hits>
		<titles>
			<item name="title" plural="titles" indexKey="title" order="freq" type="string" max="100"
			/>
		</titles>
		<results>
			<item name="keyword" plural="keywords" indexKey="keyword" order="freq" type="string"
				max="100"/>
		</results>
		<results_with_summary>
			<!-- order defaults to "freq" if omitted and max defaults to 10 -->
			<item name="denominator" plural="denominators" indexKey="denominator" order="name"
				type="number" max="10"/>
			<item name="keyword" plural="keywords" indexKey="keyword" order="freq" type="string"
				max="10"/>
			<item name="category" plural="categories" indexKey="topicCat" order="name" type="string"
				max="10"/>
			<item name="spatialRepresentation" plural="spatialRepresentations"
				indexKey="spatialRepresentation" type="string" order="freq" max="10"/>
			<item name="organisationName" plural="organisationNames" indexKey="orgName" order="freq"
				type="string" max="10"/>
			<item name="serviceType" plural="serviceTypes" indexKey="serviceType" order="freq"
				type="string" max="10"/>
			<item name="type" plural="types" indexKey="type" order="freq" type="string" max="10"/>
			<item name="created" plural="created" indexKey="_createDate" type="date" order="freq"
				max="10"/>
		</results_with_summary>
	</def>
	<typeConfig>
		<dateFormat>yyyy-MM-dd'T'hh:mm:ss</dateFormat>
		<dateFormat>yyyy-MM-dd't'hh:mm:ss</dateFormat>
		<dateFormat>yyyy-MM-dd</dateFormat>
	</typeConfig>
</summary>