  xsi:noNamespaceSchemaLocation="config-overrides.xsd">
  <import file="/WEB-INF/config-overrides-sextant-props-${overrides.props}.xml"/>
  
  <properties>
    <gn.webapp.dir>${gn.webappdir}</gn.webapp.dir>
  </properties>
  
  <!-- Sextant Turn off NRT manager to reopen last index version
    This is important to reflect status change quickly in the search
    results.
  <file name="WEB-INF/config-lucene.xml">
    <replaceText xpath="index/useNRTManagerReopenThread">false</replaceText>
  </file> -->
  
  <file name=".*/WEB-INF/config-gui.xml">
    <replaceAtt xpath="client" attName="widget" value="true"/>
    <replaceAtt xpath="client" attName="url" value="${widget.url}"/>
    <replaceAtt xpath="client" attName="createParameter" value="#create"/>
    <replaceAtt xpath="client" attName="stateId" value="s"/>
    <replaceAtt xpath="client" attName="parameters" value="${widget.parameters}"/>
    <replaceXML xpath="map/proj">
      <crs code="EPSG:4326" default="1" edit="1"/>
      <crs code="EPSG:2154"
        def="+proj=lcc +lat_1=49 +lat_2=44 +lat_0=46.5 +lon_0=3 +x_0=700000 +y_0=6600000 +ellps=GRS80 +towgs84=0,0,0,0,0,0,0 +units=m +no_defs"/>
      <crs code="EPSG:900913"
        def="+proj=merc +lon_0=0 +k=1 +x_0=0 +y_0=0 +ellps=WGS84 +datum=WGS84 +units=m +no_defs "/>
      <crs code="EPSG:3035"
        def="+proj=laea +lat_0=52 +lon_0=10 +x_0=4321000 +y_0=3210000 +ellps=GRS80 +units=m +no_defs"
      />
    </replaceXML>
    <addXML xpath="metadata-tab">
      <emodnet.chemistry flat="true"/>
      <emodnet.hydrography flat="true"/>
      <myocean.simple flat="true"/>
      <myocean flat="true"/>
      <sdnProduct flat="true"/>
    </addXML>

  </file>
  
  <!-- In Sextant, the catalog administrator takes care of DB migration. -->
  <file name=".*/WEB-INF/config-db.xml">
    <removeXML xpath="data"/>
    <removeXML xpath="migrate"/>
    <removeXML xpath="create"/>
  </file>
  
  <file name=".*/WEB-INF/config.xml">
    <replaceText xpath="general/uploadDir">../../temp/</replaceText>
    <replaceText xpath="general/maxUploadSize">100</replaceText>
    <replaceAtt xpath="appHandler/param[@name = 'useSubversion']" attName="value" value="true"/>
    <replaceAtt xpath="appHandler/param[@name = 'statusActionsClass']" attName="value" value="org.fao.geonet.kernel.metadata.SextantStatusActions"/>
    
    <replaceAtt xpath="//service[@name = 'main.search.suggest']/class/param[@name='threshold']" attName="value" value="1"/>

  </file>

  <spring>
    <import file="/WEB-INF/config-db/postgres.xml"/>
  </spring>

  <!-- Full path to user_xsl to avoid to try to get it from the data directory.
  -->
  <file name=".*/WEB-INF/config-metadata.xml">
    <!--
      This is not filtered by maven ?
      <replaceAtt xpath="//param[@name = 'user_xsl_dir']" attName="value" value="${gn.webappdir}/WEB-INF/data/data/user_xsl"/>-->
