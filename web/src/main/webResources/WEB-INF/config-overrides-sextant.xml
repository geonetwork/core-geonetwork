<overrides xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:inspire_common="http://inspire.ec.europa.eu/schemas/common/1.0"
  xmlns:inspire_ds="http://inspire.ec.europa.eu/schemas/inspire_ds/1.0"
  xsi:noNamespaceSchemaLocation="config-overrides.xsd">
  <import file="/WEB-INF/config-overrides-sextant-props.xml"/>
  
  <properties>
    <gn.webapp.dir>${gn.webappdir}</gn.webapp.dir>
  </properties>
  
  <!-- Sextant Turn off NRT manager to reopen last index version
    This is important to reflect status change quickly in the search
    results.
  <file name="WEB-INF/config-lucene.xml">
    <replaceText xpath="index/useNRTManagerReopenThread">false</replaceText>
  </file> -->
  
  <file name=".*/WEB-INF/config-gui.xml">
    <replaceAtt xpath="client" attName="widget" value="true"/>
    <replaceAtt xpath="client" attName="url" value="${widget.url}"/>
    <replaceAtt xpath="client" attName="createParameter" value="#create"/>
    <replaceAtt xpath="client" attName="stateId" value="s"/>
    <replaceAtt xpath="client" attName="parameters" value="${widget.parameters}"/>
    <replaceXML xpath="map/proj">
      <crs code="EPSG:4326" default="1" edit="1"/>
      <crs code="EPSG:2154"
        def="+proj=lcc +lat_1=49 +lat_2=44 +lat_0=46.5 +lon_0=3 +x_0=700000 +y_0=6600000 +ellps=GRS80 +towgs84=0,0,0,0,0,0,0 +units=m +no_defs"/>
      <crs code="EPSG:900913"
        def="+proj=merc +lon_0=0 +k=1 +x_0=0 +y_0=0 +ellps=WGS84 +datum=WGS84 +units=m +no_defs "/>
      <crs code="EPSG:3035"
        def="+proj=laea +lat_0=52 +lon_0=10 +x_0=4321000 +y_0=3210000 +ellps=GRS80 +units=m +no_defs"
      />
    </replaceXML>
    <addXML xpath="metadata-tab">
      <emodnet.chemistry flat="true"/>
      <emodnet.hydrography flat="true"/>
      <myocean.simple flat="true"/>
      <myocean flat="true"/>
      <sdnProduct flat="true"/>
    </addXML>

  </file>
  
  <!-- In Sextant, the catalog administrator takes care of DB migration. -->
  <file name=".*/WEB-INF/config-db.xml">
    <removeXML xpath="data"/>
    <removeXML xpath="migrate"/>
    <removeXML xpath="create"/>
  </file>
  
  <file name=".*/WEB-INF/config.xml">
    <replaceText xpath="general/uploadDir">../../temp/</replaceText>
    <replaceText xpath="general/maxUploadSize">100</replaceText>
    <replaceAtt xpath="appHandler/param[@name = 'useSubversion']" attName="value" value="true"/>
    <replaceAtt xpath="appHandler/param[@name = 'statusActionsClass']" attName="value" value="org.fao.geonet.kernel.metadata.SextantStatusActions"/>
    
    <replaceAtt xpath="//service[@name = 'main.search.suggest']/class/param[@name='threshold']" attName="value" value="1"/>

  </file>

  <!-- Full path to user_xsl to avoid to try to get it from the data directory.
  -->
  <file name=".*/WEB-INF/config-metadata.xml">
    <!--
      This is not filtered by maven ?
      <replaceAtt xpath="//param[@name = 'user_xsl_dir']" attName="value" value="${gn.webappdir}/WEB-INF/data/data/user_xsl"/>-->
    <replaceAtt xpath="services/service[@name='metadata.formatter.register']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.admin']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.list']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.update']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.files']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.edit']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.remove']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.download']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.resource']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.html']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
    <replaceAtt xpath="services/service[@name='metadata.formatter.xml']/class/param[@name = 'user_xsl_dir']" attName="value" value="${gn.webapp.dir}/WEB-INF/data/data/user_xsl"/>
  </file>

  <!-- Configure CSW Capabilities -->
  <!-- TODO : to be checked by ifremer for keywords mainly -->
  <file name=".*/xml/csw/capabilities_inspire.xml">
    <replaceXML xpath="ows:OperationsMetadata/inspire_ds:ExtendedCapabilities">
      <inspire_common:ResourceLocator>
        <inspire_common:URL>$PROTOCOL://$HOST:$PORT$SERVLET/srv/$LOCALE/$END-POINT?SERVICE=CSW&amp;VERSION=2.0.2&amp;REQUEST=GetCapabilities</inspire_common:URL>
        <inspire_common:MediaType>application/xml</inspire_common:MediaType>
      </inspire_common:ResourceLocator>
      <inspire_common:ResourceLocator>
        <inspire_common:URL>$PROTOCOL://$HOST:$PORT$SERVLET</inspire_common:URL>
        <inspire_common:MediaType>text/html</inspire_common:MediaType>
      </inspire_common:ResourceLocator>
      <inspire_common:ResourceType>service</inspire_common:ResourceType>
      <inspire_common:TemporalReference>
        <inspire_common:DateOfPublication>2011-12-01T00:00:00</inspire_common:DateOfPublication>
      </inspire_common:TemporalReference>
      <inspire_common:Conformity>
        <inspire_common:Specification
          xsi:type="inspire_common:citationInspireInteroperabilityRegulation_eng">
          <inspire_common:Title>COMMISSION REGULATION (EU) No 1089/2010 of 23 November 2010
            implementing Directive 2007/2/EC of the European Parliament and of the Council as
            regards interoperability of spatial data sets and services</inspire_common:Title>
          <inspire_common:DateOfPublication>2010-12-08</inspire_common:DateOfPublication>
          <inspire_common:URI>OJ:L:2010:323:0011:0102:EN:PDF</inspire_common:URI>
          <inspire_common:ResourceLocator>
            <inspire_common:URL>http://eur-lex.europa.eu/LexUriServ/LexUriServ.do?uri=OJ:L:2010:323:0011:0102:EN:PDF</inspire_common:URL>
            <inspire_common:MediaType>application/pdf</inspire_common:MediaType>
          </inspire_common:ResourceLocator>
        </inspire_common:Specification>
        <inspire_common:Degree>notEvaluated</inspire_common:Degree>
      </inspire_common:Conformity>
      <inspire_common:MetadataPointOfContact>
        <inspire_common:OrganisationName>$ORG_NAME</inspire_common:OrganisationName>
        <inspire_common:EmailAddress>$EMAIL</inspire_common:EmailAddress>
      </inspire_common:MetadataPointOfContact>
      <inspire_common:MetadataDate>2011-11-23</inspire_common:MetadataDate>
      <inspire_common:SpatialDataServiceType>discovery</inspire_common:SpatialDataServiceType>
      <inspire_common:MandatoryKeyword xsi:type="inspire_common:classificationOfSpatialDataService">
        <inspire_common:KeywordValue>humanCatalogueViewer</inspire_common:KeywordValue>
      </inspire_common:MandatoryKeyword>
      <inspire_common:Keyword xsi:type="inspire_common:inspireTheme_eng">
        <inspire_common:OriginatingControlledVocabulary>
          <inspire_common:Title>GEMET - INSPIRE themes</inspire_common:Title>
          <inspire_common:DateOfPublication>2008-06-01</inspire_common:DateOfPublication>
        </inspire_common:OriginatingControlledVocabulary>
        <inspire_common:KeywordValue>Area management/restriction/regulation zones and reporting
          units</inspire_common:KeywordValue>
      </inspire_common:Keyword>
      <inspire_common:Keyword xsi:type="inspire_common:inspireTheme_eng">
        <inspire_common:OriginatingControlledVocabulary>
          <inspire_common:Title>GEMET - INSPIRE themes</inspire_common:Title>
          <inspire_common:DateOfPublication>2008-06-01</inspire_common:DateOfPublication>
        </inspire_common:OriginatingControlledVocabulary>
        <inspire_common:KeywordValue>Oceanographic geographical
          features</inspire_common:KeywordValue>
      </inspire_common:Keyword>
      <inspire_common:Keyword xsi:type="inspire_common:inspireTheme_eng">
        <inspire_common:OriginatingControlledVocabulary>
          <inspire_common:Title>GEMET - INSPIRE themes</inspire_common:Title>
          <inspire_common:DateOfPublication>2008-06-01</inspire_common:DateOfPublication>
        </inspire_common:OriginatingControlledVocabulary>
        <inspire_common:KeywordValue>Bio-geographical regions</inspire_common:KeywordValue>
      </inspire_common:Keyword>
      <inspire_common:Keyword xsi:type="inspire_common:inspireTheme_eng">
        <inspire_common:OriginatingControlledVocabulary>
          <inspire_common:Title>GEMET - INSPIRE themes</inspire_common:Title>
          <inspire_common:DateOfPublication>2008-06-01</inspire_common:DateOfPublication>
        </inspire_common:OriginatingControlledVocabulary>
        <inspire_common:KeywordValue>Elevation</inspire_common:KeywordValue>
      </inspire_common:Keyword>
      <inspire_common:Keyword xsi:type="inspire_common:inspireTheme_eng">
        <inspire_common:OriginatingControlledVocabulary>
          <inspire_common:Title>GEMET - INSPIRE themes</inspire_common:Title>
          <inspire_common:DateOfPublication>2008-06-01</inspire_common:DateOfPublication>
        </inspire_common:OriginatingControlledVocabulary>
        <inspire_common:KeywordValue>Environmental monitoring
          facilities</inspire_common:KeywordValue>
      </inspire_common:Keyword>
      <inspire_common:Keyword xsi:type="inspire_common:inspireTheme_eng">
        <inspire_common:OriginatingControlledVocabulary>
          <inspire_common:Title>GEMET - INSPIRE themes</inspire_common:Title>
          <inspire_common:DateOfPublication>2008-06-01</inspire_common:DateOfPublication>
        </inspire_common:OriginatingControlledVocabulary>
        <inspire_common:KeywordValue>Habitats and biotopes</inspire_common:KeywordValue>
      </inspire_common:Keyword>
      <inspire_common:SupportedLanguages>
        <!--
          List of supported languages
        -->
      </inspire_common:SupportedLanguages>
      <inspire_common:ResponseLanguage>
        <inspire_common:Language>$INSPIRE_LOCALE</inspire_common:Language>
      </inspire_common:ResponseLanguage>
    </replaceXML>
  </file>

</overrides>
