              <cargo.servlet.port>8080</cargo.servlet.port>
            </properties>
            <deployables>
              <deployable>
                <location>${project.build.directory}/../web/target/geonetwork.war</location>
                <type>war</type>
              </deployable>
              <!--              <deployable>
                <location>${project.build.directory}/../intermap/target/intermap.war</location>
                <type>war</type>
              </deployable> -->
              <deployable>
