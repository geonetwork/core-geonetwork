<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>solr</artifactId>
    <groupId>org.geonetwork-opensource</groupId>
    <version>3.3.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>solr-config</artifactId>
  <name>Solr core configuration</name>
  <profiles>
    <profile>
      <id>solr-download</id>
      <activation>
        <property>
          <name>solr-download</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.googlecode.maven-download-plugin</groupId>
            <artifactId>download-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <id>download-solr</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>wget</goal>
                </goals>
                <configuration>
                  <url>http://archive.apache.org/dist/lucene/solr/${solr.version}/solr-${solr.version}.tgz</url>
                  <unpack>true</unpack>
                  <outputDirectory>${project.basedir}</outputDirectory>
                  <md5>${solr.version.md5}</md5>
                </configuration>
              </execution>
              <execution>
                <id>download--lib-jts</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>wget</goal>
                </goals>
                <configuration>
                  <url>http://downloads.sourceforge.net/project/jts-topo-suite/jts/1.13/jts-1.13.zip</url>
                  <unpack>true</unpack>
                  <outputDirectory>${project.build.directory}/lib-jts</outputDirectory>
                  <md5>1f5cf5510611a4e1e7dbd6435829c6f0</md5>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-resources-plugin</artifactId>
            <version>2.6</version>
            <executions>
              <execution>
                <id>copy-solr-libs</id>
                <phase>pre-integration-test</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.basedir}/solr-${solr.version}/server/solr-webapp/webapp/WEB-INF/lib</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${project.build.directory}/lib-jts/lib</directory>
                      <targetPath>${project.basedir}/solr-${solr.version}/server/solr-webapp/webapp/WEB-INF/lib</targetPath>
                      <includes>
                        <include>jts-1.13.jar</include>
                      </includes>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>solr-init</id>
      <activation>
        <property>
          <name>solr-init</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>solr-start</id>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>solr-${solr.version}/bin/solr</executable>
                  <arguments>
                    <argument>start</argument>
                    <argument>-c</argument>
                    <argument>-p</argument>
                    <argument>${solr.port}</argument>
                  </arguments>
                </configuration>
              </execution>
              <execution>
                <id>solr-create-collection</id>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>solr-${solr.version}/bin/solr</executable>
                  <workingDirectory>${project.basedir}</workingDirectory>
                  <arguments>
                    <argument>create</argument>
                    <argument>-p</argument>
                    <argument>${solr.port}</argument>
                    <argument>-c</argument>
                    <argument>catalog_${nodeid}</argument>
                    <argument>-d</argument>
                    <argument>src/main/solr-cores/catalog/</argument>
                  </arguments>
                </configuration>
              </execution>
              <execution>
                <id>solr-stop</id>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>solr-${solr.version}/bin/solr</executable>
                  <arguments>
                    <argument>stop</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>solr-start</id>
      <activation>
        <property>
          <name>solr-start</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <configuration>
              <executable>solr-${solr.version}/bin/solr</executable>
              <arguments>
                <argument>start</argument>
                <!-- In foreground -->
                <argument>-f</argument>
                <argument>-c</argument>
                <argument>-p</argument>
                <argument>${solr.port}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
