      </sidePanel>

      <tab id="default" default="true" mode="flat">
        <section xpath="/mdb:MD_Metadata/mdb:identificationInfo"/>
        <section xpath="/mdb:MD_Metadata/mdb:contentInfo"/>
        <section xpath="/mdb:MD_Metadata/mdb:distributionInfo"/>
