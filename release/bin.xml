        <include>README.txt</include>
       </includes>
      </fileSet>-->
    <fileSet>
      <!-- Dependency configuration
      <directory>web/target/dependency/jetty</directory>
      <outputDirectory>geonetwork/jetty</outputDirectory>
      <includes>
       <include>**/*</include>
      </includes>
     </fileSet>
     <fileSet>-->
      <!-- jetty configuration -->
      <directory>release/jetty</directory>
      <outputDirectory>geonetwork/jetty</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
